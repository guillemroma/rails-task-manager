<h1>My Tasks</h1>
<% @tasks.each do |task|%>
<li>
  <%= task.completed ? "✅" : "❌" %>
  <%= link_to task.title, task_path(task.id) %>
  <%= link_to "🗑️",
            task_path(task.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</li>
<% end %>
<p></p>
<%= link_to "➕ Create new task", new_path %>
<p></p>
